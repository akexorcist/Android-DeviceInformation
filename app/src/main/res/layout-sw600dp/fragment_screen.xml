<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/global_progress_loading_size"
        android:layout_height="@dimen/global_progress_loading_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:matProg_barColor="@color/red"
        app:matProg_progressIndeterminate="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/global_card_detail_width"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_margin_padding"
                app:cardCornerRadius="@dimen/global_card_view_corner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/global_margin_padding_large">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/global_margin_padding"
                            android:paddingTop="@dimen/global_margin_padding_small">

                            <TextView
                                android:layout_width="@dimen/screen_card_title_width"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_resolution"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_resolution_px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/global_margin_padding"
                                android:text="@string/sample"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/global_margin_padding"
                            android:paddingTop="@dimen/global_margin_padding_small">

                            <TextView
                                android:layout_width="@dimen/screen_card_title_width"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_resolution_dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_resolution_dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/global_margin_padding"
                                android:text="@string/sample"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/global_margin_padding"
                            android:paddingTop="@dimen/global_margin_padding_small">

                            <TextView
                                android:layout_width="@dimen/screen_card_title_width"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_dpi_x"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_dpi_x"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/global_margin_padding"
                                android:text="@string/sample"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/global_margin_padding"
                            android:paddingTop="@dimen/global_margin_padding_small">

                            <TextView
                                android:layout_width="@dimen/screen_card_title_width"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_dpi_y"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_dpi_y"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/global_margin_padding"
                                android:text="@string/sample"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/global_margin_padding"
                            android:paddingTop="@dimen/global_margin_padding_small">

                            <TextView
                                android:layout_width="@dimen/screen_card_title_width"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_dpi"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_dpi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/global_margin_padding"
                                android:text="@string/sample"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/global_margin_padding"
                            android:paddingTop="@dimen/global_margin_padding_small">

                            <TextView
                                android:layout_width="@dimen/screen_card_title_width"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_size"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/global_margin_padding"
                                android:text="@string/sample"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/global_margin_padding"
                            android:paddingTop="@dimen/global_margin_padding_small">

                            <TextView
                                android:layout_width="@dimen/screen_card_title_width"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_density"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_density"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/global_margin_padding"
                                android:text="@string/sample"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/global_margin_padding"
                            android:paddingTop="@dimen/global_margin_padding_small">

                            <TextView
                                android:layout_width="@dimen/screen_card_title_width"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_multitouch"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_multitouch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/global_margin_padding"
                                android:text="@string/sample"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/global_text_size" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cv_screen_measure"
                android:layout_width="@dimen/global_card_detail_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin_padding"
                android:layout_marginLeft="@dimen/global_margin_padding"
                android:layout_marginRight="@dimen/global_margin_padding"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="@dimen/global_card_view_corner">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/global_margin_padding_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/screen_screen_measurement"
                        android:textColor="@color/white"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>