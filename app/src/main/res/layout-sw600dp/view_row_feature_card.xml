<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/global_margin_padding_small"
        android:layout_marginLeft="@dimen/global_margin_padding"
        android:layout_marginRight="@dimen/global_margin_padding"
        android:layout_marginTop="@dimen/global_margin_padding_small"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_box_white"
            android:padding="@dimen/global_margin_padding_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feature_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/global_margin_padding_small"
                android:text="New Text"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/global_text_size" />

            <TextView
                android:id="@+id/tv_feature_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_feature_title"
                android:layout_alignStart="@+id/tv_feature_title"
                android:layout_below="@+id/tv_feature_title"
                android:text="New Text"
                android:textColor="@color/gray"
                android:textSize="@dimen/global_text_size_small" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>