<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_margin_padding_small"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/global_card_view_corner">

        <LinearLayout
            android:id="@+id/layout_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_box_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/global_margin_padding_large"
            android:paddingLeft="@dimen/global_margin_padding"
            android:paddingRight="@dimen/global_margin_padding"
            android:paddingTop="@dimen/global_margin_padding_large">

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/global_margin_padding"
                android:layout_marginTop="@dimen/global_margin_padding"
                android:gravity="center"
                android:text="@string/sample"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/global_text_size" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>