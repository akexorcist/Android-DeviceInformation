<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/global_margin_padding">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/global_dialog_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_margin_padding"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/global_card_view_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/global_margin_padding_large">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin_padding_large"
                android:text="@string/sample"
                android:textColor="@color/red"
                android:textSize="@dimen/global_text_size_large" />

            <TextView
                android:id="@+id/tv_min_sdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin_padding"
                android:text="@string/sample"
                android:textColor="@color/gray"
                android:textSize="@dimen/global_text_size_small" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/global_text_size" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>